{
  "name": "@archflow/component",
  "version": "1.0.0",
  "description": "Framework-agnostic visual AI workflow builder Web Component",
  "type": "module",
  "main": "./dist/archflow-designer.umd.cjs",
  "module": "./dist/archflow-designer.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/archflow-designer.js",
      "require": "./dist/archflow-designer.umd.cjs"
    },
    "./web-component": {
      "types": "./dist/web-component/index.d.ts",
      "import": "./dist/archflow-designer.js",
      "require": "./dist/archflow-designer.umd.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:component": "vite build",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:watch": "vite build --watch",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build:component && npm run build:types"
  },
  "keywords": [
    "web-component",
    "custom-element",
    "ai",
    "workflow",
    "langchain",
    "langchain4j",
    "visual-builder",
    "framework-agnostic",
    "vue",
    "react",
    "angular",
    "svelte"
  ],
  "author": "Archflow Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/archflow/archflow"
  },
  "bugs": {
    "url": "https://github.com/archflow/archflow/issues"
  },
  "homepage": "https://github.com/archflow/archflow#readme",
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@mantine/core": "^7.17.0",
    "@mantine/dates": "^7.17.0",
    "@mantine/hooks": "^7.17.0",
    "@mantine/notifications": "^7.17.0",
    "@mantine/spotlight": "^7.17.0",
    "@tabler/icons-react": "^3.30.0",
    "@testing-library/dom": "^10.4.0",
    "@types/node": "^25.0.9",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.5",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "jsdom": "^25.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "reactflow": "^11.11.4",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
